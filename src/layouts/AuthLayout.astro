---
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<html lang="en" data-theme="black">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Sponsorify</title>
  </head>
  <ViewTransitions />

  <body>
    <div class="mx-[42px] my-[32px]">
      <div class="flex justify-between">
        <h1 class="text-2xl font-bold">Sponsorify</h1>

        <div class="hidden md:block">
          <div class="flex gap-4 items-center">
            <a href="/auth/login" class="font-semibold">Login</a>
            <a
              href="/auth/register"
              class="py-3 px-8 rounded-[40px] bg-white text-black font-semibold"
              >Register</a
            >
          </div>
        </div>
      </div>

      <slot />
    </div>
  </body>
</html>
