---
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Sponsorify</title>
    <ViewTransitions />
  </head><body>
    <html lang="en" data-theme="black">
      <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Login - Sponsorify</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
          href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600;700&display=swap"
          rel="stylesheet"
        />
      </head>
      <body>
        <div class="mx-[42px] my-[32px]">
          <div class="flex justify-between">
            <h1 class="text-2xl font-bold">Sponsorify</h1>

            <div class="hidden md:block">
              <div class="flex gap-4 items-center">
                <a href="/login" class="font-semibold">Login</a>
                <a
                  href="/register"
                  class="py-3 px-8 rounded-[40px] bg-white text-black font-semibold"
                  >Register</a
                >
              </div>
            </div>
          </div>

          <slot />
        </div>
      </body>
    </html>
  </body>
</html>
