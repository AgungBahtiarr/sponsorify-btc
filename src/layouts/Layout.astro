---
import { Image } from "astro:assets";
import { Menu } from "lucide-astro";
const { title } = Astro.props;

import mainLogo from "../assets/images/mainlogo.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Sponsorify</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="relative z-10 w-full lg:px-4">
      <div class="navbar bg-base-100 lg:my-8">
        <div class="md:flex md:justify-between w-full">
          <div class="flex items-center">
            <Image src={mainLogo} alt="Sponsorify" width={50} />
            <a class="btn btn-ghost text-2xl font-bold" href="/">Sponsorify.</a>
          </div>

          <div class="hidden md:block">
            <ul class="flex gap-10">
              <li><a href="#">Home</a></li>
              <li><a href="#">Features</a></li>
              <li><a href="#">Blog</a></li>
              <li><a href="#">Testimony</a></li>
            </ul>
          </div>

          <div class="hidden md:block">
            <div class="flex gap-4 items-center">
              <a href="/login" class="font-semibold">Login</a>
              <a
                href="/register"
                class="py-3 px-8 rounded-[40px] bg-white text-black font-semibold"
                >Register</a
              >
            </div>
          </div>
        </div>

        <div class="flex-none md:hidden">
          <div class="drawer drawer-end mx-4">
            <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content">
              <label for="my-drawer-4" class="drawer-button"><Menu /></label>
            </div>
            <div class="drawer-side">
              <label
                for="my-drawer-4"
                aria-label="close sidebar"
                class="drawer-overlay"></label>
              <ul
                class="menu p-4 w-80 min-h-full bg-base-200 text-base-content"
              >
                <li><a href="#">Home</a></li>
                <li><a href="#">Features</a></li>
                <li><a href="#">Blog</a></li>
                <li><a href="#">Testimony</a></li>
                <li><a href="#">Login</a></li>
                <li><a href="#">Register</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>
